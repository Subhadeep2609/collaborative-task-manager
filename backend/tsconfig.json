{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",

    "strict": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "moduleResolution": "node",
    "resolveJsonModule": true,

    "types": ["node", "express"],
    "typeRoots": ["./node_modules/@types"],

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
